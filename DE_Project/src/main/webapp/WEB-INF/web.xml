<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>Fillter</filter-name>
        <filter-class>Filter.Fillter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Fillter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>AuthenticatorController</servlet-name>
        <servlet-class>Controller.AuthenticatorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>Controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerViewOrderController</servlet-name>
        <servlet-class>Controller.CustomerViewOrderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StaffViewOrder</servlet-name>
        <servlet-class>Controller.StaffViewOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StaffViewOrderController</servlet-name>
        <servlet-class>Controller.StaffViewOrderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrdersController</servlet-name>
        <servlet-class>Controller.OrdersController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductStatisticsController</servlet-name>
        <servlet-class>Controller.ProductStatisticsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthenticatorController</servlet-name>
        <url-pattern>/Authen/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/Home/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerViewOrderController</servlet-name>
        <url-pattern>/CustomerViewOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StaffViewOrderController</servlet-name>
        <url-pattern>/ViewOrders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrdersController</servlet-name>
        <url-pattern>/Orders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductStatisticsController</servlet-name>
        <url-pattern>/ViewProductStatistics</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/View/login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
